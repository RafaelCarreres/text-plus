{
  "manifest_version": 3,
  "name": "Text+",
  "version": "1.0",
  "description": "A Chrome extension to store and copy text with descriptions.",
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}

